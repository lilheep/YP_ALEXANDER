<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button"/>
    <style name="Card"/>
    <style name="ProgressBar"/>
    <style name="Text"/>

    <style name="Theme.App" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_red</item>
        <item name="colorPrimaryDark">@color/primary_red_dark</item>
        <item name="colorAccent">@color/primary_red</item>
        <item name="android:windowBackground">@color/background_white</item>
        <item name="android:statusBarColor">@color/primary_red_dark</item>
    </style>

    <style name="Text.Header">
        <item name="android:textColor">@color/text_red</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="Text.Title">
        <item name="android:textColor">@color/text_red</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Text.Body">
        <item name="android:textColor">@color/text_dark_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Text.Caption">
        <item name="android:textColor">@color/text_light_gray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Button.Primary" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="Button.Secondary" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_secondary_red</item>
        <item name="android:textColor">@color/primary_red</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>

    <style name="Button.Text">
        <item name="android:background">@drawable/button_text_red</item>
        <item name="android:textColor">@color/primary_red</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="EditText.Primary" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_primary</item>
        <item name="android:textColor">@color/text_dark_gray</item>
        <item name="android:textColorHint">@color/text_light_gray</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Card.Primary">
        <item name="android:background">@drawable/card_primary</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="ProgressBar.Red">
        <item name="android:indeterminateTint">@color/primary_red</item>
        <item name="android:progressTint">@color/primary_red</item>
    </style>

    <style name="Toolbar.Primary" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/primary_red</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="RadioButton.Red" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/primary_red</item>
    </style>

    <style name="CheckBox.Red" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/primary_red</item>
    </style>

    <style name="Switch.Red" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumbTint">@color/primary_red</item>
        <item name="android:trackTint">@color/primary_red_light</item>
    </style>
</resources>
